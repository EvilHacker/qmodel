{
	// use WSL (Windows Subsystem for Linux) for a bash shell
	"terminal.integrated.shell.windows": "wsl.exe",

	"npm.runSilent": true,
	"css.lint.emptyRules": "ignore",

	"files.associations": {
		"/.*rc": "json"
	},
	"files.exclude": {
		"/.cache": true
	},
	"search.exclude": {
		"/.cache": true,
		"/build*": true,
	},

	"cSpell.words": [
		"Suska",
		"ampproject",
		"brotli",
		"browserslist",
		"camelcase",
		"caniuse",
		"colormin",
		"compat",
		"cosmiconfig",
		"dedent",
		"devtools",
		"hnxy",
		"horiz",
		"htmlnano",
		"htmlnanorc",
		"iife",
		"linebreak",
		"memoized",
		"minification",
		"panose",
		"posthtml",
		"preact",
		"promisify",
		"qmodel",
		"quasis",
		"qubit",
		"qubits",
		"sourcemap",
		"stylelint",
		"svgr",
		"vnode",
		"xlink",
		"zopfli"
	],
}